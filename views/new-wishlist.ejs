<% include ./partials/header %>
<div class="submit-modal hidden row">

</div>
<div class="submit-message hidden col-sm-6">
  Your wishlist has been submitted! :)
</div>
<div class='col-xs-3 text-center'>
  <button type='button' class='btn btn-primary btn-lg header-items'>Account</button>
</div>
</header>

<div class="container">

    <div class="row new-wishlist-parameters">

      <form class="form-inline">
        <div class='col-md-4 form-group'>
          <label for="wishlist-name">New Wish List:</label>
          <input type="text" class="form-control" placeholder="Name">
        </div>

        <div class=" col-md-4 form-group">
        <div class='input-group'>
          <input type="text" class="form-control" placeholder="Search" name="srchterm" id="srch-term">
          <div class="input-group-btn">
              <button id="srch-trm-btn" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
        </div>

        <div class="col-md-4 form-group">
          <label for="date-field">Due By:</label>
          <input type="text" class="form-control" placeholder="Month/Day/Year" name="name" value="">
        </div>

      </form>
  </div>

  <div class="row">
    <div class="col-sm-8">

      <div id="panel-color" class="panel-heading">
        <h3 class="panel-title">Item Search Results:</h3>
      </div>

      <div class="new-wishlist-area panel">
        <div class="row">
        </div>
      </div>

    </div>
    <div class="col-sm-4">

      <div id="panel-color" class="panel-heading">
        <h3 class="panel-title">Added Items:</h3>
      </div>

      <div class="new-wishlist-area-chosen panel">
        <div class="row">
        </div>
      </div>
    </div>
  </div>
  <div class="row new-wishlist-buttons">
    <div class="col-sm-3"><button type='button' id="add-items" class='btn btn-primary btn-lg'>Add Selected Items +</button></div>
    <div class="col-sm-1"></div>
    <!-- <div class="col-sm-3"><button type='button' class='btn btn-primary btn-lg'>See Added Items</button></div> -->
    <div class="col-sm-5"></div>
    <div class="col-sm-3"><button type='button' id="submit-list" class='btn btn-primary btn-lg'>Submit</button></div>
  </div>
</div>

<% include ./partials/footer %>
